<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        <div class="col-lg-5 mb-30">
            <form name="sentMessage" method="post" enctype="multipart/form-data">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="<%= product.image %>" alt="Image">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
                <div class="control-group">
                    <input type="file" class="form-control" id="subject" value="<%= product.image %>" name="image"
                           required>
                    <p class="help-block text-danger"></p>
                </div>
                <div>
                    <button class="btn btn-primary py-2 px-4" type="submit">Update image
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <form action="" method="post">
                <div class="h-100 bg-light p-30">
                    <h3>Product's name</h3>
                    <input type="text" value="<%= product.product_name %>" name="product_name">
                    <p class="help-block text-danger"></p>
                    <h5>Price</h5>
                    <input type="number" value="<%= product.price %>" name="price" min="1">
                    <p class="help-block text-danger"></p>
                    <h5>Description</h5>
                    <input type="text" value="<%= product.description %>" name="description">
                    <p class="help-block text-danger"></p>
                    <div class="control-group">
                        <label class="control-label">Category</label>
                        <select class="form-control input-sm" name="category_id">
                            <option value="1">Dress</option>
                            <option value="7">Complete</option>
                            <option value="2">Shirt</option>
                            <option value="3">Jean</option>
                            <option value="4">Shoes</option>
                        </select>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Gender</label>
                        <select class="form-control input-sm" name="gender_id">
                            <option value="1">Man</option>
                            <option value="2">Woman</option>
                        </select>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <h5>Quantity: </h5>
                        <input type="number" value="<%= product.quantity %>" name="quantity" min="1">
                    </div>
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div>
                            <button class="btn btn-primary px-3" type="submit"><i class="fa fa-shopping-cart mr-1"></i>
                                Update
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


