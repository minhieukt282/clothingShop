<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MultiShop - History</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <%- include('../partial/style') %>
</head>

<body>
<!-- Topbar Start -->
<%- include('../partial/nav-bar') %>
<!-- Topbar End -->

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span
                class="bg-secondary pr-3">History</span>
    </h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                <tr>
                    <th>Time</th>
                    <th>Product's name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody class="align-middle">
                <% for( let i = 0; i < bills.length; i++){ %>
                    <tr>
                        <td class="align-middle"><%= bills[i].time %></td>
                        <td class="align-middle"><%= bills[i].product_name %></td>
                        <td class="align-middle"><%= bills[i].quantity %></td>
                        <td class="align-middle">$<%= bills[i].price %></td>
                    </tr>
                <% } %>
                <tr>
                    <td colspan="3">Total</td>
                    <td><%= total %></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-5 mb-5">
            <div class="bg-light p-30 mb-5">
                <div class="pt-2">
                    <a href="/shops/history" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Back to
                        history</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Footer Start -->
<%- include('../partial/footer') %>
<!-- Footer End -->


<!-- Back to Top -->
<a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

<!-- JavaScript Libraries -->
<%- include('../partial/script') %>
</body>

</html>